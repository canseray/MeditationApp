<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#fff"
    android:gravity="center">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:background="#fff"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/meditasyonImage"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:layout_above="@+id/meditasyonTitle"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/meditasyonTitle"
                android:layout_margin="4dp"
                android:maxLines="1"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Meditation baslıgı burada"
                android:layout_above="@+id/meditasyonSubTitle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:id="@+id/meditasyonSubTitle"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"/>
            
        </RelativeLayout>
        
    </android.support.v7.widget.CardView>

</LinearLayout>
